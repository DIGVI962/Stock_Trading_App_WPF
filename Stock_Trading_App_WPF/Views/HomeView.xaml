<UserControl x:Class="Stock_Trading_App_WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stock_Trading_App_WPF.Views"
             xmlns:viewModels="clr-namespace:Stock_Trading_App_WPF.ViewModels"
             xmlns:userControls="clr-namespace:Stock_Trading_App_WPF.UserControls"
             mc:Ignorable="d" Style="{StaticResource Page_Style}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:HomeViewModel />
    </UserControl.DataContext>
    <Grid>

        <Border CornerRadius="0 20 20 0" Background="#010101" />

        <Grid>

            <TextBlock Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Text="Home" Foreground="Red" />

        </Grid>

    </Grid>
</UserControl>
